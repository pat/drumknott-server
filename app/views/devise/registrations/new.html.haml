%h2 Sign up

= semantic_form_for resource, as: resource_name, url: registration_path(resource_name) do |form|
  = render "devise/shared/error_messages", resource: resource

  = form.inputs do
    = form.input :email
    = form.input :country, :as => :country, :priority_countries => [], :hint => 'Required to handle billing correctly.'
    = form.input :password
    = form.input :password_confirmation
    %li.input
      %p.inline-hints By signing up for an account, you agree to our #{ link_to 'Terms of Service', terms_path } and #{ link_to 'Privacy Policy', privacy_path }.
  = form.actions do
    = form.action :submit, :as => :button, :label => 'Sign up', :button_html => {:class => 'button primary'}

= render "devise/shared/links"
