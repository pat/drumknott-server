= semantic_form_for [:my, site] do |form|
  = form.inputs do
    = form.input :name, :hint => 'Names can only contain lowercase letters, numbers, dashes and underscores.'

  - if site.persisted?
    = form.actions do
      = form.action :submit, :as => :button, :button_html => {:class => 'button primary'}
  - else
    %script{'src'        => 'https://checkout.stripe.com/checkout.js',
      'class'            => 'stripe-button',
      'data-key'         => ENV['STRIPE_PUBLISHABLE_KEY'],
      'data-name'        => 'Drumknott',
      'data-label'       => 'Subscribe via Credit Card',
      'data-description' => 'Monthly subscription ($3.00)',
      'data-panel-label' => 'Subscribe',
      'data-locale'      => 'auto',
      'data-currency'    => 'USD',
      'data-email'       => current_user.email}
